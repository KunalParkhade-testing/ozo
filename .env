# Example environment variables for local development
# Copy to .env and edit values before running

# Postgres database URL used by SQLAlchemy
# Format: postgresql://<user>:<password>@<host>:<port>/<dbname>
DATABASE_URL=postgresql://user:password@db:5432/ozo

# JWT secret key (change to a secure random value in production)
SECRET_KEY=replace-with-a-secure-random-string

# CORS allowed origins (comma separated or set to * for dev)
ALLOW_ORIGINS=["*"]

